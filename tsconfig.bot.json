{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@/shared/*": ["./src/shared/*"]
    },
    "baseUrl": "."
  },
  "include": ["src/bot/**/*", "src/shared/**/*"],
  "exclude": ["node_modules"]
}
